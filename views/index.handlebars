<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">News For You</h1>
    <p class="lead text-center">The Global News Edition</p>
  </div>
</div>


{{#each article}}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div data-_id="{{this.id}}" class="card m-2">
        <div class="card-header bg-primary">
          <h3>
            <a class="article-link" style="color:white;" target="_blank" rel="noopener noreferrer" href="{{this.link}}">{{this.title}}</a>
            <a class="btn btn-success save" style="color:white;">Save Article</a>
          </h3>
        </div>
        <div class="card-body">{{this.sentence}}</div>
      </div>
    </div>
  </div>
</div>
{{/each}}